<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
<mapper namespace="com.backend.doctor.mapper.DoctorsReservingsMapper">

	<!-- @GetMapping("/today-plan-view") -->
	<select id="selectReservingsByDoctorId" resultType="com.backend.doctor.domain.DoctorsReservings">
		SELECT
			`doctorNumber`,
			`customerId`,
			`customerName`,
			`title`,
			`description`,
			`visitDate`,
			`imagePath`,
			`memo`,
			`status`,
			`treatment`,
			`createdAt`,
			`updatedAt`
		FROM
			`reservings`
		WHERE
			`doctorNumber` = #{doctorId}
	</select>

</mapper>